# i3 config file (v4)
# Clean, minimal configuration without external scripts


set $mod Mod1

# Font
font pango:JetBrainsMono Nerd Font 10

# Start XDG autostart .desktop files
exec --no-startup-id dex --autostart --environment i3

# Screen locking
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock --nofork

# Audio controls (PipeWire/PulseAudio compatible)
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +5%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -5%
bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle
bindsym XF86AudioMicMute exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle

# Brightness controls
bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl s +5%
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl s 5%-

# Window management
floating_modifier $mod
tiling_drag modifier titlebar


# Terminal
bindsym $mod+Return exec alacritty

# Program launcher
bindsym $mod+d exec --no-startup-id rofi -show drun

# Window operations
bindsym $mod+Shift+q kill

# Additional applications
bindsym $mod+Shift+Return exec thunar
bindsym $mod+Shift+n exec librewolf

# Focus movement
bindsym $mod+j focus left
bindsym $mod+k focus up
bindsym $mod+l focus down
bindsym $mod+semicolon focus right
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# Window movement
bindsym $mod+Shift+j move left
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move down
bindsym $mod+Shift+semicolon move right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# Layout controls
bindsym $mod+h split h
bindsym $mod+v split v
bindsym $mod+f fullscreen toggle
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split
bindsym $mod+Shift+space floating toggle
bindsym $mod+Tab focus mode_toggle
bindsym $mod+a focus parent

# Workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# Workspace switching
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# Move containers to workspaces
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10

# i3 controls
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart
bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'Exit i3?' -B 'Yes, exit i3' 'i3-msg exit'"

# Resize mode
mode "resize" {
        bindsym j resize shrink width 10 px or 10 ppt
        bindsym k resize grow height 10 px or 10 ppt
        bindsym l resize shrink height 10 px or 10 ppt
        bindsym semicolon resize grow width 10 px or 10 ppt
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}
bindsym $mod+r mode "resize"

# Screenshots using maim (X11)
bindsym Print exec --no-startup-id maim ~/Pictures/screenshot-$(date +'%Y%m%d-%H%M%S').png
bindsym Shift+Print exec --no-startup-id maim -s ~/Pictures/screenshot-$(date +'%Y%m%d-%H%M%S').png
bindsym $mod+Print exec --no-startup-id maim -i $(xdotool getactivewindow) ~/Pictures/screenshot-$(date +'%Y%m%d-%H%M%S').png

# Media control support
bindsym XF86AudioPlay exec --no-startup-id playerctl play-pause
bindsym XF86AudioNext exec --no-startup-id playerctl next
bindsym XF86AudioPrev exec --no-startup-id playerctl previous

# Window appearance
for_window [class="^.*"] border pixel 2
for_window [class="Pavucontrol"] floating enable
for_window [class="Blueman-manager"] floating enable
#for_window [class="Thunar"] floating enable


# Colors (Nord theme inspired)
set $bg-color            #2E3440
set $inactive-bg-color   #3B4252
set $text-color          #ECEFF4
set $inactive-text-color #D8DEE9
set $urgent-bg-color     #BF616A
set $indicator-color     #88C0D0

client.focused          $indicator-color    $indicator-color   $text-color          $indicator-color
client.unfocused        #1E2329             #1E2329            $inactive-text-color #1E2329
client.focused_inactive #1E2329             #1E2329            $inactive-text-color #1E2329
client.urgent           $urgent-bg-color    $urgent-bg-color   $text-color          $indicator-color

# Startup applications
exec_always --no-startup-id feh --bg-fill ~/wallpaper.jpg
exec_always --no-startup-id ~/.config/polybar/launch.sh

# Input method (fcitx5 for CJK support)
exec --no-startup-id fcitx5 -d

# Caps Lock <-> Escape swap
exec_always --no-startup-id setxkbmap -option caps:swapescape
